@model ProgramareMedic.Models.Programari

@{
    ViewData["Title"] = "Create";
}

<h1>Adaugă programare</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PacientId" class="control-label">Pacient</label>
                <select asp-for="PacientId" class="form-control" asp-items="ViewBag.PacientId">
                    <option value="">Selectează un pacient</option>
                </select>
                <span asp-validation-for="PacientId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MedicId" class="control-label">Medic</label>
                <select asp-for="MedicId" class="form-control" asp-items="ViewBag.MedicId">
                    <option value="">Selectează un medic</option>
                </select>
                <span asp-validation-for="MedicId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataProgramare" class="control-label">Data programare</label>
                <input asp-for="DataProgramare" class="form-control" />
                <span asp-validation-for="DataProgramare" class="text-danger" asp-items="ViewBag.DataProgramare"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategorieServicii" class="control-label">Categorie servicii</label>
                <input asp-for="CategorieServicii" class="form-control" />
                <span asp-validation-for="CategorieServicii" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Salvează</button>
                <a asp-action="Index" class="btn btn-outline-danger ml-2">Înapoi</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
