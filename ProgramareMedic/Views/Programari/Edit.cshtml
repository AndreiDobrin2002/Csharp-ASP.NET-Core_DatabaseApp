@model ProgramareMedic.Models.Programari

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifica programare</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DataProgramare" class="control-label"></label>
                <input asp-for="DataProgramare" class="form-control" />
                <span asp-validation-for="DataProgramare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategorieServicii" class="control-label"></label>
                <input asp-for="CategorieServicii" class="form-control" />
                <span asp-validation-for="CategorieServicii" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Salveaza" class="btn btn-primary px-4" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-danger px-4">Inapoi</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
