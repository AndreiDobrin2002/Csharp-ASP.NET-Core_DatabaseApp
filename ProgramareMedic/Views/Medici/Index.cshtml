@model IEnumerable<ProgramareMedic.Models.Medici>

@{
    ViewData["Title"] = "Index";
}

<h1 class="fw-bold">Lista medici</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mt-2">Adauga medic</a>
</p>
<table class="table table-bordered table-hover">
    <caption>Lista medicilor angajati</caption>
<thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeMedic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrenumeMedic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specializare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clinica)
            </th>
            <th>Actiuni</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.NumeMedic)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.PrenumeMedic)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specializare)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Clinica)
                </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" pt-4>Modifica</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-success mx-1">Detalii</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger mx-1">Sterge</a>
            </td>
        </tr>
}
    </tbody>
</table>
