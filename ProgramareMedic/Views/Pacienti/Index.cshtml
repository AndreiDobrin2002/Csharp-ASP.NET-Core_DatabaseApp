@model IEnumerable<ProgramareMedic.Models.Pacienti>

@{
    ViewData["Title"] = "Index";
}

<h1 class="fw-bold" >Lista pacienti</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mt-2">Adauga pacient</a>
</p>
<table class="table table-bordered table-hover">
    <caption>Lista pacientilor inregistrati</caption>
    <thead class="table-dark">
        <tr >
            <th>
                @Html.DisplayNameFor(model => model.Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Varsta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresa)
            </th>
            <th>Actiuni</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Prenume)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Varsta)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adresa)
                </td>
            <td >
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" pt-4>Modifica</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-success mx-1">Detalii</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger mx-1">Sterge</a>
            </td>
        </tr>
}
    </tbody>
</table>
